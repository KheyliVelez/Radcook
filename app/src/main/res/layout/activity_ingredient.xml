<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondonuevo"
    tools:context=".Ingredient">

    <TextView
        android:id="@+id/enteringredientTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Ingredientes"
        android:textColor="#009648"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/enteringredientImage"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_below="@id/enteringredientTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="-9dp"
        android:layout_marginEnd="302dp"
        android:src="@drawable/ingrediente" />
</RelativeLayout>
