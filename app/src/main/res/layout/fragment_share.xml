<?xml version="1.0" encoding="utf-8"?>

   <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondonuevo"
    tools:context=".ShareFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="640dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="PQRS"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/pqrsSecion"
        android:layout_width="222dp"
        android:layout_height="69dp"
        android:layout_above="@+id/pqrsText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="15dp"
        android:hint="Categoria"
        android:inputType="textImeMultiLine"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="163dp" />

    <EditText
        android:id="@+id/pqrsText"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_above="@+id/pqrsButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="106dp"
        android:hint="Cuentanos"
        android:inputType="text"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="248dp" />

    <Button
        android:id="@+id/pqrsButton"
        android:layout_width="248dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="87dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="213dp"
        android:backgroundTint="#009846"
        android:text="Enviar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-52dp"
        tools:layout_editor_absoluteY="512dp" />


</RelativeLayout>