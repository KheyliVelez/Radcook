<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondonuevo"
    tools:context=".Forum">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forumTitle"
        android:text="Foro"
        android:textSize="36sp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#009648"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/forumImage"
        android:layout_width="144dp"
        android:layout_height="102dp"
        android:layout_below="@id/forumTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="251dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/foro" />
</RelativeLayout>